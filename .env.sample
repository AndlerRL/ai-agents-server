OPENAI_API_KEY=<your_openai_api_key>
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=<your_openai_organization>

# PostgreSQL Database
DATABASE_URL=postgres://user:password@localhost:5678/aaia-server-dev

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30000

# External APIs
HUGGINGFACE_API_KEY=<your_huggingface_api_key>

# Server Configuration
PORT=3001

# Database Router Configuration (optional)
DEFAULT_ROUTING_STRATEGY=adaptive  # adaptive, vector_first, graph_first